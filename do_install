#!/bin/bash
#installs the tools of this package to local usr directory of home directory
#
LDIR="$HOME/usr/local"
BDIR="$LDIR/bin"

INST='ln -svfT'

pushd odt2txt > /dev/null
make DESTDIR="$LDIR" install && make clean
popd > /dev/null

if [ ! -d "$BDIR" ]; then
	mkdir -pv "$BDIR"
fi

pushd bin > /dev/null
for f in *; do
	if [ -x "$f" ]; then
		$INST "$PWD/$f" "$BDIR/$f"
	fi
done
popd > /dev/null

#TODO: test system architecture

#TODO: install x86 bin
#TODO: install x64 bin
